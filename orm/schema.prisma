datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Unit {
  id        Int       @id @default(autoincrement())
  userId String @unique
  guestInRoom Int? @default(null)
  Room Room @relations(fields: [guestInRoom] relation:[id])
  updated   DateTime  @default(now())
  created   DateTime  @default(now())
  Rooms  Room[]
}

model Room {
  id        Int       @id @default(autoincrement())
  authorId Int
  Author Unit @relations(fields: [authorId], relation: [id])
  Guests User[]
  updated   DateTime  @default(now())
  created   DateTime  @default(now())
}
