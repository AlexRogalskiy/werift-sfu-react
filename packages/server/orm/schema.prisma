datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Unit {
  id      String    @id
  name    String    @default("No Name")
  online  Boolean   @default(true)
  updated DateTime  @default(now())
  created DateTime  @default(now())
  MyRooms Room[]
  IGuest  Guest[]
  Message Message[]
}

model Room {
  id       String    @id
  authorId String?
  Unit     Unit?     @relation(fields: [authorId], references: [id])
  archive  Boolean   @default(false)
  updated  DateTime  @default(now())
  created  DateTime  @default(now())
  Guests   Guest[]
  Message  Message[]
  Video    Video[]
}

model Guest {
  id      Int      @id @default(autoincrement())
  unitId  String
  roomId  String
  Unit    Unit     @relation(fields: [unitId], references: [id])
  Room    Room     @relation(fields: [roomId], references: [id])
  updated DateTime @default(now())
  created DateTime @default(now())

  @@unique([unitId, roomId])
}

model Message {
  id           Int      @id @default(autoincrement())
  text         String   @db.MediumText
  unitId       String
  roomId       String
  quoteId      Int?
  Unit         Unit     @relation(fields: [unitId], references: [id])
  Room         Room     @relation(fields: [roomId], references: [id])
  Quote        Quote?   @relation(fields: [quoteId], references: [id])
  updated      DateTime @default(now())
  created      DateTime @default(now())
  Message      Quote[]  @relation("Message")
  MessageQuote Quote[]  @relation("MessageQuote")
}

model Quote {
  id           Int       @id @default(autoincrement())
  messageId    Int
  Message      Message?  @relation("Message", fields: [messageId], references: [id])
  quoteId      Int?
  MessageQuote Message?  @relation("MessageQuote", fields: [quoteId], references: [id])
  Quote        Message[]
  created      DateTime  @default(now())
}

model Video {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  time    Int
  roomId  String
  Room    Room     @relation(fields: [roomId], references: [id])
  updated DateTime @default(now())
  created DateTime @default(now())
}
