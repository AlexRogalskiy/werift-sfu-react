{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "downlevelIteration": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "ES2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": false,
    "typeRoots": ["src/types"]
  },
  "include": ["src", "src/types/declarations.d.ts"],
  "exclude": ["node_modules", "dist", "tmp", "umd"]
}
