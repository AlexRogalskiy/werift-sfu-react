{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "downlevelIteration": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxFactory": "",
    "jsxFragmentFactory": "",
    "lib": ["esnext", "ES2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": false,
    "noImplicitAny": false
  },
  "include": ["*.d.ts", "src"],
  "exclude": ["node_modules", "dist", "tmp"]
}
