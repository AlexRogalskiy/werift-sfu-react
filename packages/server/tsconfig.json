{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "downlevelIteration": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxFactory": "",
    "jsxFragmentFactory": "",
    "lib": ["esnext", "ES2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "include": ["*.d.ts", "src"],
  "exclude": [
    "node_modules",
    "dist",
    "tmp",
    "src/werift-webrtc",
    "src/werift-webrtc/website",
    "src/werift-webrtc/examples",
    "src/werift-webrtc/e2e",
    "src/werift-webrtc/loadtest",
    "src/werift-webrtc/packages/webrtc/tests",
    "src/werift-webrtc/packages/dtls/examples",
    "src/werift-webrtc/packages/ice/examples",
    "src/werift-webrtc/packages/rtp/examples"
  ]
}
