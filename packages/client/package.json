{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "react-scripts start",
    "compile:main": "microbundle --format es -i src/package/Main.tsx -o dist/Main.js",
    "compile:room": "microbundle --format es src/package/components/Room.tsx -o dist/components/Room.js",
    "compile": "node -e \"fs.rmSync('packages/client/dist', { recursive: true, force: true })\" && npm run compile:main && npm run compile:room",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
